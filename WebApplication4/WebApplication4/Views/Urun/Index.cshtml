@using WebApplication4.Models.Entity
@using PagedList
@using PagedList.Mvc
@model List<TBLURUNLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
    {
    <p>
        <b>Aranacak musteri adi:</b>@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table  class="table table table-bordered">
    <thead>
        <tr>
            <th>URUN ID</th>
            <th>URUN ADI</th>
            <th>KATEGEORI</th>
            <th>FIYAT</th>
            <th>MARKAT</th>
            <th>STOK</th>
            <th>SIL</th>
            <th>GUNCELLE</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var ürn in Model)
        {
            <tr>
                <th>@ürn.URUNID</th>
                <td>@ürn.URUNADI</td>
                <td>@ürn.URUNKATEGORI</td>
                <td>@ürn.FIYAT</td>
                <td>@ürn.MARKA</td>
                <td>@ürn.STOK</td>
                <td><a href="/URUN/SIL/@ürn.URUNID" class="btn btn-danger ">SIL</a></td>
                <td><a href="/URUN/UrunGetir/@ürn.URUNID" class="btn btn-success ">GUNCELLE</a></td>
            </tr>
            }
    </tbody>
</table>



<a href="/URUN/UrunEkle" class=" btn btn-primary "> YENI URUN EKLE</a>

